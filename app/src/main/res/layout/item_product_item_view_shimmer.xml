<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imgViewProductImageShimmer"
        android:background="@color/shimmer_color"
        android:layout_width="match_parent"
        android:scaleType="centerCrop"
        android:layout_height="@dimen/_230dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/textViewProductShimmerName"
        android:layout_width="@dimen/_200dp"
        android:layout_height="@dimen/_20dp"
         app:layout_constraintTop_toBottomOf="@+id/imgViewProductImageShimmer"
        android:layout_marginStart="@dimen/_10dp"
        android:layout_marginTop="@dimen/_20dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:background="@color/shimmer_color"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textViewProductDescription"
        android:layout_width="@dimen/_200dp"
        android:layout_height="@dimen/_20dp"
        app:layout_constraintTop_toBottomOf="@id/textViewProductShimmerName"
        android:layout_marginTop="@dimen/_10dp"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/description"
        android:background="@color/shimmer_color"
       />
</androidx.constraintlayout.widget.ConstraintLayout>