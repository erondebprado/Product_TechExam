<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".View.Adapter.ProductAdapter"
    android:layout_width="match_parent"
    android:padding="@dimen/_10dp"
    android:layout_height="170dp">


        <ImageView
            android:id="@+id/imgViewProductImage"
            app:srcCompat="@drawable/img_mascara"
            android:layout_width="170dp"
            android:scaleType="centerCrop"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/textViewProductName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/imgViewProductImage"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="@dimen/_10dp"
            android:layout_marginTop="@dimen/_20dp"
            android:textColor="@color/black"
            android:ellipsize="end"
            android:textSize="@dimen/_15sp"
            android:textStyle="bold"
            android:text="@string/loading" />


        <TextView
            android:id="@+id/textViewProductDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/imgViewProductImage"
            app:layout_constraintTop_toTopOf="@id/textViewProductName"
            android:ellipsize="end"
            android:layout_marginTop="@dimen/_30dp"
            android:layout_marginStart="@dimen/_10dp"
            android:textColor="@color/description"
            android:textSize="@dimen/_9sp"
            android:text="@string/loading"
            tools:ignore="SmallSp" />



        <TextView
            android:id="@+id/textViewProductRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/imgViewProductImage"
            app:layout_constraintTop_toTopOf="@id/textViewProductDescription"
            android:layout_marginTop="@dimen/_40dp"
            android:layout_marginStart="@dimen/_10dp"
            android:textColor="@color/description"
            android:textStyle="bold"
            android:textSize="@dimen/_12sp"
            android:text="@string/loading" />

        <ImageView
            android:src="@drawable/ic_rating"
            android:layout_width="@dimen/_15dp"
            android:layout_height="@dimen/_15dp"
            android:layout_marginStart="@dimen/_5dp"
            app:layout_constraintLeft_toRightOf="@id/textViewProductRating"
            app:layout_constraintTop_toTopOf="@id/textViewProductDescription"
            android:layout_marginTop="@dimen/_40dp"
            />


        <TextView
            android:id="@+id/textViewProductPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/imgViewProductImage"
            app:layout_constraintTop_toBottomOf="@+id/textViewProductRating"
            android:layout_marginStart="@dimen/_10dp"
            android:layout_marginTop="@dimen/_5dp"
            android:textColor="@color/price"
            android:textStyle="bold"
            android:textSize="@dimen/_15sp"
            android:text="@string/loading" />

</androidx.constraintlayout.widget.ConstraintLayout>